@model dani.Models.Register

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@using (Html.BeginForm("StudentDetals", "Student", FormMethod.Post))
{
    <div class="form-group">
        <label for="fn">Name course</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        <div style="color:red">@Html.ValidationMessageFor(x => x.Name) </div>
    </div>
    <div class="form-group">
        <label for="Last Name">Time</label>
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control" })
        <div style="color:red">@Html.ValidationMessageFor(x => x.Time) </div>
    </div>
    <div class="form-group">
        <label for="fn">ID</label>
        @Html.TextBoxFor(m => m.User, new { @class = "form-control" ,@readonly = true })
        <div style="color:red">@Html.ValidationMessageFor(x => x.User) </div>
    </div>
    <input id="Submit2" class="btn btn-primary" type="submit" value="Register" />
}

