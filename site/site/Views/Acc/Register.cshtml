@model site.Models.Register

@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@using (Html.BeginForm("Register", "Acc", FormMethod.Post))
{
    <div class="form-group">
        <label for="id">ID</label>
        @Html.TextBoxFor(m => m.User, new { @class = "form-control" })
        <div style="color:red">@Html.ValidationMessageFor(x => x.User) </div>
    </div>
    <div class="form-group">
        <label for="password">password</label>
        @Html.TextBoxFor(m => m.password, new { @class = "form-control", Type = "password", placeholder = "Password" })
        <div style="color:red">@Html.ValidationMessageFor(x => x.password) </div>
    </div>
    <div style="color:red">@ViewBag.error </div>
    <div class="form-group">
        <label for="password2">password agine</label>
        @Html.TextBoxFor(m => m.Check, new { @class = "form-control", placeholder = "Password", Type = "password" })
        <div style="color:red">@Html.ValidationMessageFor(x => x.Check) </div>
    </div>

    <input id="Submit2" class="btn btn-primary" type="submit" value="Register" />
}